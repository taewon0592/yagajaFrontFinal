<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="auction.YagajaAuctionImpl">

	<select id="getTotalCount" resultType="int">
		select count(*) from lodge
	</select>
	
	<select id="listPage" resultType="auction.YagajaAuctionDTO">
		select * from (select Tb.*, rownum rNum from (select * from lodge order by lodge_no desc) Tb ) where rNum between #{param1} and #{param2}
	</select>


</mapper>